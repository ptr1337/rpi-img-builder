+	install -m 0644 binaries/bootcode.bin "$tmpdir/boot"
+	install -m 0644 binaries/fixup*.dat "$tmpdir/boot"
+	install -m 0644 binaries/start*.elf "$tmpdir/boot"
+	cp binaries/LICENCE.broadcom "$tmpdir/boot"
