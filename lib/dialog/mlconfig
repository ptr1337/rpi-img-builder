#!/bin/bash
### DO NOT EDIT
BRED="\e[1;31m"
RED="\e[0;31m"
FIN="\e[0m"
user=""
passwd=""
rootpasswd="0"
VERSION="5.10.39"
rc="0"
menuconfig="0"
crosscompile="1"
ccache="0"
DISTRO="debian"
DISTRO_VERSION="buster"
custom_defconfig="0"
MYCONFIG=""

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Create a Mainline user data file" \
	  --title "Config Menu" \
	  --form "Choose:" \
0 40 0 \
	"Username:"	1 1	"$user" 		1 11 14 0 \
	"Password:"	2 1	"$passwd"  		2 11 14 0 \
	"Enable root:"	3 1	"$rootpasswd"  		3 14 2 0 \
	""		4 1	""	 		4 14 0 0 \
	"Linux kernel"	5 1	""	 		5 14 0 0 \
        "Branch:"   	6 1     "$VERSION"        	6 9 10 0 \
        "RC:"		7 1     "$rc"                   7 5 2 0 \
	"Menuconfig:"	8 1	"$menuconfig"  		8 13 2 0 \
	"Crosscompile:" 9 1	"$crosscompile" 	9 15 2 0 \
	"Caching on:"	10 1	"$ccache"	 	10 13 2 0 \
	""		11 1	""	 		11 14 0 0 \
	"Distribution"	12 1	""	 		12 14 0 0 \
	"Distro:"	13 1	"$DISTRO"	  	13 10 15 0 \
	"Release:"	14 1	"$DISTRO_VERSION"  	14 10 15 0 \
	""		15 1	""	 		15 14 0 0 \
	"Customize"	16 1	""	 		16 14 0 0 \
	"Defconfig:"	17 1	"$custom_defconfig" 	17 12 2 0 \
	"Name:"		18 1	"$MYCONFIG"	  	18 7 20 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo user='"' > tmp0
echo passwd='"' >> tmp0
echo rootpasswd= >> tmp0
echo VERSION='"' >> tmp0
echo rc= >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo ccache= >> tmp0
echo DISTRO='"' >> tmp0
echo DISTRO_VERSION='"' >> tmp0
echo custom_defconfig= >> tmp0
echo MYCONFIG='"' >> tmp0
echo userscripts=0 >> tmp0
echo verbose=0 >> tmp0
echo devuser=1 >> tmp0
echo builder=3.10 >> tmp0
echo '"' > tmp2
echo '"' >> tmp2
echo >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo '"' >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo _defconfig'"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# categories
sed -i '4i### LINUX KERNEL' userdata.txt
sed -i '10i### DISTRIBUTION' userdata.txt
sed -i '13i### CUSTOM' userdata.txt
sed -i '18i### DO NOT EDIT BELOW THIS LINE' userdata.txt

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
