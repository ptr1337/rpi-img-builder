#!/bin/bash
### DO NOT EDIT
RED="\e[0;31m"
FIN="\e[0m"
DISTRO_VERSION="buster"
VERSION="5.10.y"
menuconfig="0"
crosscompile="1"
debian="1"
devuan="0"
ubuntu="0"
custom_defconfig="0"
MYCONFIG=""

# open fd
exec 3>&1

# Store data to $VALUES variable
VALUES=$(dialog --ok-label "Submit" --no-cancel \
	  --backtitle "Raspberry Pi Image Builder | Administrator" \
	  --title "Config Menu" \
	  --form "Choose:" \
0 40 0 \
	"Linux kernel"	1 1	""	 		1 14 0 0 \
        "Branch:"   	2 1     "$VERSION"        	2 9 7 0 \
	"Menuconfig:"	3 1	"$menuconfig"  		3 13 2 0 \
	"Crosscompile:" 4 1	"$crosscompile" 	4 15 2 0 \
	""		5 1	""	 		5 14 0 0 \
	"Distributions"	6 1	""	 		6 14 0 0 \
	"Release:"	7 1	"$DISTRO_VERSION"  	7 10 15 0 \
	"Debian:"	8 1	"$debian" 		8 9 2 0 \
	"Devuan:"	9 1	"$devuan" 		9 9 2 0 \
	"Ubuntu:"	10 1	"$ubuntu"	 	10 9 2 0 \
	""		11 1	""	 		11 14 0 0 \
	"Customize"	12 1	""	 		12 14 0 0 \
	"Defconfig:"	13 1	"$custom_defconfig" 	13 12 2 0 \
	"Name:"		14 1	"$MYCONFIG"	  	14 7 20 0 \
2>&1 1>&3)

# close fd
exec 3>&-

# convert into vars
echo "$VALUES" > tmp1
echo VERSION='"' >> tmp0
echo menuconfig= >> tmp0
echo crosscompile= >> tmp0
echo DISTRO_VERSION='"' >> tmp0
echo debian= >> tmp0
echo devuan= >> tmp0
echo ubuntu= >> tmp0
echo custom_defconfig= >> tmp0
echo MYCONFIG='"' >> tmp0
echo userscripts=0 >> tmp0
echo verbose=0 >> tmp0
echo admin=1 >> tmp0
echo builder=3.8 >> tmp0
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo '"' >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo >> tmp2
echo _defconfig'"' >> tmp2
paste -d '\0' tmp0 tmp1 tmp2  > userdata.txt
rm -f tmp0 tmp1 tmp2

# categories
sed -i '1i### LINUX KERNEL' userdata.txt
sed -i '5i### DISTRIBUTIONS' userdata.txt
sed -i '10i### CUSTOM' userdata.txt
sed -i '15i### DO NOT EDIT BELOW THIS LINE' userdata.txt

# clear screen
clear

# userdata
echo -e "${RED}userdata file created${FIN}."
