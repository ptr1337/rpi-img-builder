#!/bin/bash
### DO NOT EDIT
OUTPUT="output/bcm2711"
DIALOG_CANCEL=1
DIALOG_ESC=255
HEIGHT=0
WIDTH=0

display_result() {
  dialog --title "$1" \
    --no-collapse \
    --msgbox "$result" 0 0
}

while true; do
  exec 3>&1
  selection=$(dialog \
    --backtitle "Raspberry Pi Image Builder" \
    --title "Raspberry Pi 4B" \
    --clear \
    --cancel-label "Exit" \
    --menu "Select:" $HEIGHT $WIDTH 4 \
    "1" "Make All" \
    "2" "Make Kernel" \
    "3" "Make ROOTFS" \
    "4" "Make Image" \
    2>&1 1>&3)
  exit_status=$?
  exec 3>&-;
  case $exit_status in
    $DIALOG_CANCEL)
      clear
      echo "Program terminated."
      exit
      ;;
    $DIALOG_ESC)
      clear
      echo "Program aborted." >&2
      exit 1
      ;;
  esac
  case $selection in
    0 )
      clear
      echo "Program terminated."
      ;;
    1 )
      make all
      dialog --prgbox "Results:" "ls rpi-4*.img* *aarch64* $OUTPUT/" 30 70
      exit 0
      ;;
    2 )
      make select
      dialog --prgbox "Results:" "ls $OUTPUT/*.deb" 30 70
      ;;
    3 )
      make rootfs
      dialog --prgbox "Results:" "ls *aarch64*" 30 70
      ;;
    4 )
      make image
      dialog --prgbox "Results:" "ls rpi-4*.img*" 30 70
      ;;
  esac
done
