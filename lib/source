# extra
module_sig(){
echo CONFIG_MODULE_SIG=y >> arch/arm64/configs/bcm2711_defconfig
echo CONFIG_MODULE_SIG_KEY='"'certs/signing_key.pem'"' >> arch/arm64/configs/bcm2711_defconfig
}
